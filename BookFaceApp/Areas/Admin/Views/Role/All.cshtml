@model IEnumerable<IdentityRole>
@{
    ViewBag.Title = "All Roles";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<a asp-action="Add" class="btn btn-primary" style="margin-bottom: 10px;">Create a Role</a>

<table class="table table-sm table-bordered table-bordered">
    <tr><th>ID</th><th>Name</th><th>Users</th><th>Update</th><th>Delete</th></tr>
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td i-role="@role.Id"></td>
            <td><a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@role.Id">Update</a></td>
            <td>
                <form asp-action="Delete" asp-route-id="@role.Id" method="post" onclick="return confirm('Are you sure you want to delete this publication?')">
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>