@model RoleViewModel
@{
    ViewBag.Title = "Update Role";
}

<h1 class="text-center">@ViewBag.Title</h1>
<hr />

<a asp-action="All" class="btn btn-primary">Back</a>

<div asp-validation-summary="All" class="text-danger"></div>

<form method="post">
    <input type="hidden" name="roleName" value="@Model.Role.Name" />
    <input type="hidden" name="roleId" value="@Model.Role.Id" />

    <h2 class="text-center">Add To @Model.Role.Name</h2>
    <table class="table table-bordered table-sm">
        @if (Model.NonUsers.Count() == 0)
        {
            <tr><td colspan="2">All Users Are Members</td></tr>
        }
        else
        {
            @foreach (User user in Model.NonUsers)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>
                        <input type="checkbox" name="AddIds" value="@user.Id">
                    </td>
                </tr>
            }
        }
    </table>

    <h2 class="text-center">Remove From @Model.Role.Name</h2>
    <table class="table table-bordered table-sm">
        @if (Model.Users.Count() == 0)
        {
            <tr><td colspan="2">No Users Are Members</td></tr>
        }
        else
        {
            @foreach (User user in Model.Users)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>
                        <input type="checkbox" name="DeleteIds" value="@user.Id">
                    </td>
                </tr>
            }
        }
    </table>
    <button type="submit" class="btn btn-primary">Save</button>
</form>