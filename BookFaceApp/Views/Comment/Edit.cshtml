@model CommentEditModel

@{
	ViewBag.Title = "Edit your publication";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
	<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
		<form asp-action="Edit" method="post">
			@Html.HiddenFor(m => m.Id)
			@Html.HiddenFor(m => m.Publicationid)
			<div class="mb-3">
				<label asp-for="@Model.Text" class="form-label">Title</label>
				<input asp-for="@Model.Text" class="form-control" aria-required="true" />
				<span asp-validation-for="Text" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<input class="btn btn-primary" type="submit" value="Edit" />
			</div>
		</form>
	</div>
</div>


@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
