@model PublicationAddCommentModel

@{
    ViewBag.Title = "Make a new comment";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="AddComment" method="post">
            <div class="mb-3"> 
                <label asp-for="@Model.Text" class="form-label">Title</label>
                <input asp-for="@Model.Text" class="form-control" aria-required="true" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <form class="input-group-sm" asp-controller="Publication" asp-action="AddComment" asp-route-publicationId="@Model.PublicationId">
                <input type="submit" value="Post Comment" class="fs-6 btn btn-success mb-3 p-2" />
            </form>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
